{{define "urlItem"}}
<li id="url-{{.num}}-list-group-item" class="list-group-item list-group-item-info" data-num="{{.num}}">
    <div class="input-group">
          <span id="url-{{.num}}-status-ok" class="input-group-addon hide" data-num="{{.num}}"><span class="glyphicon glyphicon-ok"></span></span>
          <span id="url-{{.num}}-status-fail" class="input-group-addon hide" data-num="{{.num}}"><span class="glyphicon glyphicon-remove"></span></span>
          <span class="input-group-addon"><span class="glyphicon glyphicon-globe"></span></span>
          <input type="text" class="form-control" id="url-{{.num}}" placeholder="URL" data-num="{{.num}}">
          <span id="url-{{.num}}-play-container" class="input-group-addon hide" data-num="{{.num}}"><span class="glyphicon glyphicon-play"></span></span>
          <span id="url-{{.num}}-wait-container" class="input-group-addon hide" data-num="{{.num}}"><span class="glyphicon glyphicon-time"></span></span>
          <span id="url-{{.num}}-download-container" class="input-group-addon" data-num="{{.num}}"><span class="glyphicon glyphicon-download-alt"></span></span>
      </div>
      <div id="url-{{.num}}-progress-container" class="progress progress-striped active hide" data-num="{{.num}}">
          <div id="url-{{.num}}-progress-bar" class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 1%" data-num="{{.num}}"></div>
      </div>
</li>
{{end}}